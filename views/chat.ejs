<% include ./partials/header.ejs %>
<div class="chat-container">
    <div class="messages">
      <% messages.forEach(message => { %>
        <div class="message <%= message.senderId.equals(userId) ? 'sent' : 'received' %>">
          <strong><%= message.senderId.username %></strong>: <%= message.message %>
        </div>
      <% }) %>
    </div>
  
    <form action="/chats/send" method="POST" class="message-form">
      <input type="hidden" name="senderId" value="<%= userId %>">
      <input type="hidden" name="receiverId" value="<%= receiverId %>">
      <input type="text" name="message" placeholder="Type your message" required>
      <button type="submit">Send</button>
    </form>
  </div>
  <% include ./partials/footer.ejs %>